{
  "name": "daniel-mall",
  "version": "0.1.0",
  "private": true,
  "description": "Daniel Mall - 面向电商客服的工具订阅平台",
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter daniel-web dev",
    "build": "pnpm -r build",
    "build:libs": "pnpm --filter ku-utils build && pnpm --filter kv-ui build",
    "build:web": "pnpm --filter daniel-web build",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "clean": "rm -rf node_modules pnpm-lock.yaml */node_modules */dist */.nuxt",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.5.0",
    "@commitlint/config-conventional": "^18.5.0",
    "husky": "^9.0.6",
    "lint-staged": "^15.2.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@9.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/RyenToretto/daniel-mall.git"
  },
  "author": "Daniel Mall Team",
  "license": "MIT"
}
